RewriteEngine On
RewriteBase /

# 404 sayfanı tekrar rewrite etme
RewriteCond %{REQUEST_URI} !^/404\.php$

# Var olan dosya/klasörü bypass et
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Her şeyi index.php'ye gönder (pretty URL)
RewriteRule ^ index.php [L,QSA]

# İsteğe bağlı: doğrudan /404.php çağrısını 404 statüsüne zorlamak için:
ErrorDocument 404 /404.php
